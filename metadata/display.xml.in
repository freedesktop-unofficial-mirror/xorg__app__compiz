<compiz>
  <interface name="display">
    <method name="addScreen">
      <arg type="i" name="number" direction="in"/>
    </method>
    <method name="removeScreen">
      <arg type="i" name="number" direction="in"/>
    </method>
    <property name="audibleBell" type="b">
      <_short>Audible Bell</_short>
      <_long>Audible system beep</_long>
      <default>true</default>
    </property>
    <property name="clickToFocus" type="b">
      <_short>Click To Focus</_short>
      <_long>Click on window moves input focus to it</_long>
      <default>true</default>
    </property>
    <property name="hideSkipTaskbarWindows" type="b">
      <_short>Hide Skip Taskbar Windows</_short>
      <_long>Hide windows not in taskbar when entering show desktop mode</_long>
      <default>true</default>
    </property>
    <property name="ignoreHintsWhenMaximized" type="b">
      <_short>Ignore Hints When Maximized</_short>
      <_long>Ignore size increment and aspect hints when window is maximized</_long>
      <default>true</default>
    </property>
    <property name="raiseOnClick" type="b">
      <_short>Raise On Click</_short>
      <_long>Raise windows when clicked</_long>
      <default>true</default>
    </property>
    <property name="autoRaise" type="b">
      <_short>Auto-Raise</_short>
      <_long>Raise selected windows after interval</_long>
      <default>true</default>
    </property>
    <property name="autoRaiseDelay" type="i">
      <_short>Auto-Raise Delay</_short>
      <_long>Interval before raising selected windows</_long>
      <default>1000</default>
      <min>0</min>
      <max>10000</max>
    </property>
    <property name="filter" type="i">
      <_short>Texture Filter</_short>
      <_long>Texture filtering</_long>
      <default>1</default>
      <min>0</min>
      <max>2</max>
      <desc>
	<value>0</value>
	<_name>Fast</_name>
      </desc>
      <desc>
	<value>1</value>
	<_name>Good</_name>
      </desc>
      <desc>
	<value>2</value>
	<_name>Best</_name>
      </desc>
    </property>
    <property name="pingDelay" type="i">
      <_short>Ping Delay</_short>
      <_long>Interval between ping messages</_long>
      <default>5000</default>
      <min>1000</min>
      <max>30000</max>
    </property>
  </interface>
</compiz>
