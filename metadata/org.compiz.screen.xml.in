<compiz>
  <interface name="org.compiz.screen">
    <method name="updateOutputDevices">
      <_short>Update output devices</_short>
      <_long>Update internal output structure to reflect the contents of the output node</_long>
    </method>
    <method name="updatePassiveGrabs">
      <_short>Update passive server grabs</_short>
      <_long>Update passive server grabs to reflect the contents of the keyGrabs node</_long>
    </method>
    <method name="addPassiveXKeyGrab">
      <_short>Add passive X11 key grab</_short>
      <_long>Add a passive X11 key grab for this keycode/modifier combination</_long>
      <arg name="keycode" type="i" direction="in"/>
      <arg name="modifiers" type="i" direction="in"/>
    </method>
    <method name="removePassiveXKeyGrab">
      <_short>Remove passive X11 key grab</_short>
      <_long>Remove a passive X11 key grab for this keycode/modifier combination</_long>
      <arg name="keycode" type="i" direction="in"/>
      <arg name="modifiers" type="i" direction="in"/>
    </method>
    <method name="addPassiveKeyGrab">
      <_short>Add passive key grab</_short>
      <_long>Add a passive key grab for this keycode/modifier combination</_long>
      <arg name="key" type="s" direction="in"/>
      <arg name="modifiers" type="i" direction="in"/>
    </method>
    <method name="removePassiveKeyGrab">
      <_short>Remove passive key grab</_short>
      <_long>Remove a passive key grab for this keycode/modifier combination</_long>
      <arg name="key" type="s" direction="in"/>
      <arg name="modifiers" type="i" direction="in"/>
    </method>
    <method name="runCommand">
      <_short>Run Command</_short>
      <_long>Run command by executing '/bin/sh -c' with the 'command' argument. The DISPLAY environment variable will be set with the current screen is default for any X11 clients</_long>
    </method>
    <method name="mainMenu">
      <_short>Main Menu</_short>
      <_long>Show main menu</_long>
      <arg name="eventTime" type="i" direction="in"/>
    </method>
    <method name="runDialog">
      <_short>Run Dialog</_short>
      <_long>Show run dialog</_long>
      <arg name="eventTime" type="i" direction="in"/>
    </method>
    <method name="showDesktop">
      <_short>Show Desktop</_short>
      <_long>Minimize all windows and make desktop window visible</_long>
    </method>
    <method name="hideDesktop">
      <_short>Hide Desktop</_short>
      <_long>Unminimize all windows previously minimized when showing desktop</_long>
    </method>
    <property name="detectOutputs" type="b">
      <_short>Detect Outputs</_short>
      <_long>Automatic detection of output devices</_long>
      <default>true</default>
    </property>
    <property name="detectRefreshRate" type="b">
      <_short>Detect Refresh Rate</_short>
      <_long>Automatic detection of refresh rate</_long>
      <default>true</default>
    </property>
    <property name="lighting" type="b">
      <_short>Lighting</_short>
      <_long>Use diffuse light when screen is transformed</_long>
      <default>true</default>
    </property>
    <property name="syncToVBlank" type="b">
      <_short>Sync To VBlank</_short>
      <_long>Only perform screen updates during vertical blanking period</_long>
      <default>true</default>
    </property>
    <property name="unredirectFullscreenWindows" type="b">
      <_short>Unredirect Fullscreen Windows</_short>
      <_long>Allow drawing of fullscreen windows to not be redirected to offscreen pixmaps</_long>
      <default>false</default>
    </property>
    <property name="slowAnimations" type="b">
      <_short>Slow Animations</_short>
      <_long>Use slow animations</_long>
      <default>false</default>
    </property>
    <property name="hSize" type="i">
      <_short>Horizontal Virtual Size</_short>
      <_long>Screen size multiplier for horizontal virtual size</_long>
      <default>4</default>
      <min>1</min>
      <max>32</max>
    </property>
    <property name="numberOfDesktops" type="i">
      <_short>Number of Desktops</_short>
      <_long>Number of virtual desktops</_long>
      <default>1</default>
      <min>1</min>
      <max>36</max>
    </property>
    <property name="opacityStep" type="i">
      <_short>Opacity Step</_short>
      <_long>Opacity change step</_long>
      <default>10</default>
      <min>1</min>
      <max>50</max>
    </property>
    <property name="refreshRate" type="i">
      <_short>Refresh Rate</_short>
      <_long>The rate at which the screen is redrawn (times/second)</_long>
      <default>50</default>
      <min>1</min>
      <max>200</max>
    </property>
    <property name="vSize" type="i">
      <_short>Vertical Virtual Size</_short>
      <_long>Screen size multiplier for vertical virtual size</_long>
      <default>1</default>
      <min>1</min>
      <max>32</max>
    </property>
    <property name="overlappingOutputs" type="i">
      <_short>Overlapping Outputs</_short>
      <_long>Overlapping output strategy</_long>
      <default>0</default>
      <min>0</min>
      <max>1</max>
    </property>
    <property name="defaultIconImage" type="s">
      <_short>Default Icon</_short>
      <_long>Default window icon image</_long>
      <default>icon</default>
    </property>
    <node type="org.compiz.delegate.si">
      <interface name="org.compiz.delegate">
	<node name="matches">
	  <interface name="org.compiz.object">
	    <node type="org.compiz.signalMatch.simple">
	      <interface name="org.compiz.signalMatch.simple">
		<property name="path" type="s">
		  <default>//*</default>
		</property>
		<property name="interface" type="s">
		  <default>org.compiz.signalMatch.keyEvent</default>
		</property>
		<property name="name" type="s">
		  <default>newState</default>
		</property>
		<property name="signature" type="s">
		  <default>si</default>
		</property>
		<node name="args">
		  <interface name="org.compiz.object">
		    <node type="org.compiz.signalArgMap.string">
		      <interface name="org.compiz.signalArgMap.string">
			<property name="source" type="i">
			  <default>5</default>
			</property>
		      </interface>
		    </node>
		    <node type="org.compiz.signalArgMap.string">
		      <interface name="org.compiz.signalArgMap.int">
			<property name="source" type="i">
			  <default>6</default>
			</property>
		      </interface>
		    </node>
		  </interface>
		</node>
	      </interface>
	    </node>
	  </interface>
	</node>
      </interface>
      <connect signal="notify" method="addPassiveKeyGrab"/>
    </node>
    <node type="org.compiz.delegate.si">
      <interface name="org.compiz.delegate">
	<node name="matches">
	  <interface name="org.compiz.object">
	    <node type="org.compiz.signalMatch.simple">
	      <interface name="org.compiz.signalMatch.simple">
		<property name="path" type="s">
		  <default>//*</default>
		</property>
		<property name="interface" type="s">
		  <default>org.compiz.signalMatch.keyEvent</default>
		</property>
		<property name="name" type="s">
		  <default>oldState</default>
		</property>
		<property name="signature" type="s">
		  <default>si</default>
		</property>
		<node name="args">
		  <interface name="org.compiz.object">
		    <node type="org.compiz.signalArgMap.string">
		      <interface name="org.compiz.signalArgMap.string">
			<property name="source" type="i">
			  <default>5</default>
			</property>
		      </interface>
		    </node>
		    <node type="org.compiz.signalArgMap.string">
		      <interface name="org.compiz.signalArgMap.int">
			<property name="source" type="i">
			  <default>6</default>
			</property>
		      </interface>
		    </node>
		  </interface>
		</node>
	      </interface>
	    </node>
	  </interface>
	</node>
      </interface>
      <connect signal="notify" method="removePassiveKeyGrab"/>
    </node>
    <node type="org.compiz.delegate.void">
      <interface name="org.compiz.delegate">
	<property name="compress" type="b">
	  <default>true</default>
	</property>
	<node name="matches">
	  <interface name="org.compiz.object">
	    <node type="org.compiz.signalMatch.structureNotify">
	      <interface name="org.compiz.signalMatch.structureNotify">
		<property name="object" type="s">
		  <default>outputs</default>
		</property>
	      </interface>
	    </node>
	  </interface>
	</node>
      </interface>
      <connect signal="notify" method="updateOutputDevices"/>
    </node>
    <node name="outputs">
      <interface name="org.compiz.object">
	<node type="org.compiz.box">
	  <interface name="org.compiz.box">
	    <property name="x1" type="i">
	      <default>0</default>
	    </property>
	    <property name="y1" type="i">
	      <default>0</default>
	    </property>
	    <property name="x2" type="i">
	      <default>1024</default>
	    </property>
	    <property name="y2" type="i">
	      <default>768</default>
	    </property>
	  </interface>
	</node>
      </interface>
    </node>
  </interface>
</compiz>
