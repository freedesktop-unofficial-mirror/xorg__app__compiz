<compiz>
  <interface name="org.compiz.window">
    <method name="close">
      <_short>Close Window</_short>
      <_long>Close window using WM_DELETE_WINDOW protocol if supported by window client</_long>
      <arg name="eventTime" type="i" direction="in"/>
    </method>
    <method name="raise">
      <_short>Raise Window</_short>
      <_long>Raise window</_long>
    </method>
    <method name="lower">
      <_short>Lower Window</_short>
      <_long>Lower window</_long>
    </method>
    <signal name="xButtonPress">
      <_short>Button Press</_short>
      <_long>Indicates that a button press event has occurred</_long>
      <arg name="button" type="i" direction="out"/>
      <arg name="modifiers" type="i" direction="out"/>
      <arg name="x" type="i" direction="out"/>
      <arg name="y" type="i" direction="out"/>
      <arg name="time" type="i" direction="out"/>
    </signal>
    <signal name="xButtonRelease">
      <_short>X Button Release</_short>
      <_long>Indicates that an X11 button release event has occurred</_long>
      <arg name="button" type="i" direction="out"/>
      <arg name="modifiers" type="i" direction="out"/>
      <arg name="x" type="i" direction="out"/>
      <arg name="y" type="i" direction="out"/>
      <arg name="time" type="i" direction="out"/>
    </signal>
    <signal name="xKeyPress">
      <_short>X Key Press</_short>
      <_long>Indicates that an X11 key press event has occurred</_long>
      <arg name="keycode" type="i" direction="out"/>
      <arg name="modifiers" type="i" direction="out"/>
      <arg name="time" type="i" direction="out"/>
    </signal>
    <signal name="xKeyRelease">
      <_short>X Key Release</_short>
      <_long>Indicates that an X11 key release event has occurred</_long>
      <arg name="keycode" type="i" direction="out"/>
      <arg name="modifiers" type="i" direction="out"/>
      <arg name="time" type="i" direction="out"/>
    </signal>
    <signal name="xBell">
      <_short>X Bell Notify</_short>
      <_long>Indicates that an X11 bell notify event has occurred</_long>
      <arg name="time" type="i" direction="out"/>
    </signal>
    <property name="focusStealingPrevention" type="b">
      <_short>Focus Stealing Prevention</_short>
      <_long>Prevent window from stealing focus when mapped</_long>
      <default>true</default>
    </property>
    <node type="org.compiz.delegate.i">
      <interface name="org.compiz.object">
	<node name="matches">
	  <interface name="org.compiz.object">
	    <node type="org.compiz.signalMatch.keyPress">
	      <interface name="org.compiz.signalMatch.keyEvent">
		<property name="key" type="s">
		  <default>F4</default>
		</property>
		<property name="modifiers" type="i">
		  <default>4</default>
		</property>
	      </interface>
	    </node>
	  </interface>
	</node>
      </interface>
      <connect signal="notify" method="close"/>
    </node>
  </interface>
</compiz>
